<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainPageActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background3">

        <Button
            android:id="@+id/baddstud"
            android:layout_width="450dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:cursorVisible="false"
            android:onClick="movetostudent"
            android:text="Add Student Record"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bviewtud"
            android:layout_width="450dp"
            android:layout_height="80dp"
            android:layout_marginTop="100dp"
            android:cursorVisible="false"
            android:onClick="movetoview"
            android:text="View Student Record"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

      <!--  <Button
            android:id="@+id/bshowatte"
            android:layout_width="450dp"
            android:layout_height="80dp"
            android:layout_marginTop="200dp"
            android:cursorVisible="false"
            android:onClick="movetoshowatte"
            android:text="Show Attendance"
            android:textColor="@android:color/black"
            android:textSize="24sp" />-->

        <Button
            android:id="@+id/baddstaff"
            android:layout_width="450dp"
            android:layout_height="80dp"
            android:layout_marginTop="270dp"
            android:cursorVisible="false"
            android:onClick="movetostaff"
            android:text="Add Staff Record"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <Button
            android:id="@+id/bviewstaff"
            android:layout_width="450dp"
            android:layout_height="80dp"
            android:layout_marginTop="370dp"
            android:cursorVisible="false"
            android:onClick="movetoviewstaff"
            android:text="View Staff Record"
            android:textColor="@android:color/black"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/blogout"
            android:layout_width="450dp"
            android:layout_height="80dp"
            android:layout_marginTop="500dp"
            android:cursorVisible="false"
            android:onClick="movetologout"
            android:text="Logout"
            android:textColor="@android:color/black"
            android:textSize="24sp" />


    </RelativeLayout>

